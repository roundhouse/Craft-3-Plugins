<div class="page-header">
    <h1>{{ title }}</h1>
</div>

{% if createNewButton is defined and createNewButton %}
    {% set newEntryUrl = url('email-builder/notifications/new') %}
    <a href="{{ newEntryUrl }}" id="new-campaign-btn" class="btn btn-info submit"><i class="fas fa-plus"></i><span class="txt">{{ "Create New Notification"|t('email-builder') }}</span></a>
{% endif %}

{% if saveBtn is defined and saveBtn %}
    <div class="flex-grow"></div>
    <button type="submit" href="#" class="btn submit save-notification">{{ "Save Notification" |t('email-builder') }}<span class="btn-hint" style="padding-left: 20px; opacity: .6;">&#8984; + S</span></button>
{% endif %}

{% if showPreviewBtn is defined %}
    {% if showPreviewBtn %}
        <div class="btn livepreviewbtn">{{ "Live Preview"|t('app') }}</div>
    {% endif %}
{% endif %}